<% layout('../layout') -%>
<% stylesheet('/public/styles/vendors/izi.min.css') -%>
<% script('/public/scripts/vendors/alpine.min.js') -%>
<% script('/public/scripts/vendors/axios.min.js') -%>
<% script('/public/scripts/vendors/izi.min.js') -%>
<% script('/public/scripts/helpers.js') -%>
<% script('/public/scripts/register.js') -%>

<div class="flex items-center justify-center px-4 sm:px-6 lg:px-8 mb-auto">
  <div class="max-w-md w-full space-y-8 mt-6">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-blue-500">
        Create your account
      </h2>
    </div>
    <div class="bg-white rounded-md p-10 mt-8 bg-gray-900 border-2 border-blue-500">
      <form x-data="signupData()" @submit.prevent="submit()" novalidate>
        <div class="rounded-md mb-8">
          <div class="mb-2">
            <label for="username" class="text-gray-300">Username</label>
            <div class="rounded-md">
              <input
                id="username"
                x-model.trim="user.username.$val"
                name="username"
                type="text"
                autocomplete="off"
                required
                :class="[user.username.$error ? 'border-red-500' : 'border-blueGray-700 focus:ring-blue-500 focus:border-blue-500', 'bg-blueGray-700 appearance-none rounded-md w-full px-3 py-2 border-2 text-gray-300 focus:outline-none sm:text-sm']"
                @blur="validate"
                @input="input('username')"
              >
              <template x-if="user.username.$error">
                <div class="p-1 text-red-500 rounded" x-text="user.username.$error"></div>
              </template>
            </div>
          </div>
          <div class="mb-2">
            <label for="password" class="text-gray-300">Password</label>
            <div>
              <input
                id="password"
                x-model.trim="user.password.$val"
                name="password"
                type="password"
                autocomplete="off"
                required
                :class="[user.password.$error ? 'border-red-500' : 'border-blueGray-700 focus:ring-blue-500 focus:border-blue-500' ,'bg-blueGray-700 appearance-none rounded-md w-full px-3 py-2 border-2 text-gray-300 focus:outline-none sm:text-sm']"
                @blur="validate"
                @input="input('password')"
              >
              <template x-if="user.password.$error">
                <div class="p-1 text-red-500 rounded" x-text="user.password.$error"></div>
              </template>
            </div>
          </div>
          <div class="mb-2">
            <label for="activationKey" class="text-gray-300">Activation Key</label>
            <div>
              <input
                id="activationKey"
                x-model.trim="user.activationKey.$val"
                name="activationKey"
                type="text"
                autocomplete="off"
                required
                :class="[user.activationKey.$error ? 'border-red-500' : 'border-blueGray-700 focus:ring-blue-500 focus:border-blue-500' ,'bg-blueGray-700 appearance-none rounded-md w-full px-3 py-2 border-2 text-gray-300 focus:outline-none sm:text-sm']"
                @blur="validate"
                @input="input('activationKey')"
              >
              <template x-if="user.activationKey.$error">
                <div class="p-1 text-red-500 rounded" x-text="user.activationKey.$error"></div>
              </template>
            </div>
          </div>
        </div>
        <div>
          <button type="submit" class="group relative w-full flex justify-center py-2 px-4 rounded-md bg-blue-600 text-gray-300 shadow-md focus:outline-none focus:ring-2 focus:ring-blueGray-800">
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5 text-gray-400"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path></svg>
            </span>
            Sign in
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
