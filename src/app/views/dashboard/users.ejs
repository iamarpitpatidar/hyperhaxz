<% layout('./layout') -%>

<div class="flex flex-col mt-4">
    <div class="mx-8 p-2 align-middle inline-block">
        <div class="shadow overflow-hidden border-b border-gray-700 sm:rounded-lg">
            <% if (!!users.length) { %>
            <table class="table-auto w-full divide-y divide-gray-700">
                <thead class="bg-gray-800">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        UID
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        Username
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        Invited on
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        Role
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                        Status
                    </th>
                </tr>
                </thead>
                <tbody class="bg-gray-850 divide-y divide-gray-700">
                <% getClassByRole = function(role) {
                    switch (role) {
                    case 'user':
                    	return 'bg-gray-200 text-gray-800'
                    case 'seller':
                    	return 'bg-yellow-100 text-yellow-800'
                    case 'support':
                    	return 'bg-blue-200 text-blue-800'
                    case 'admin':
                    	return 'bg-green-200 text-green-800'
                    default:
                    	return ''
                    }
                } %>
                <% users.forEach((each, index) => { %>
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= index+1 %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">
                                <%= each.username %>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= new Date(each.createdAt).toDateString() %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="<%= getClassByRole(each.role) %> px-2 mr-2 inline-flex text-xs leading-5 font-semibold rounded-full">
                                <%= each.role %>
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <span class="<%= each.status === 'active' ? 'bg-green-200 text-green-800' : 'bg-red-100 text-red-800' %> px-2 inline-flex text-xs leading-5 font-semibold rounded-full">
                            <%= each.status %>
                          </span>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
            <% } else { %>
                <div class="text-lg">You haven't invited anyone yet.</div>
            <% } %>
        </div>
    </div>
</div>
