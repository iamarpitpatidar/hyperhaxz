<div id="modal" class="fixed z-10 inset-0 overflow-y-auto hidden" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-25 transition-opacity" aria-hidden="true"></div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
        <div class="bg-gray-800 border-2 border-blue-500 inline-block align-bottom rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-md sm:w-full">
            <form action="orders/new" method="post" id="product_modal">
                <div class="p-4 sm:p-6">
                    <div class="block sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0">
                            <h3 class="text-lg leading-6 font-medium text-gray-400">Select Length and Quantity</h3>
                            <div class="mt-2">
                                <div class="mb-4 grid grid-cols-2 gap-2">
                                    <input name="t" class="hidden" type="text" value="<%= csrfToken %>">
                                    <input name="_id" class="hidden" type="text" :value="data.product._id">
                                    <input name="variant" class="hidden" id="variant" type="text">
                                    <label>
                                        <div class="text-left text-gray-500">Length</div>
                                        <select id="length" @change="update" class="w-full border-blueGray-700 bg-blueGray-700 appearance-none rounded-md px-3 py-2 border-2 text-gray-300 focus:outline-none sm:text-sm" required></select>
                                    </label>
                                    <label>
                                        <div class="text-left text-gray-500">Quantity</div>
                                        <input
                                                placeholder="1"
                                                name="quantity"
                                                id="quantity"
                                                @change="update"
                                                type="number"
                                                value="1"
                                                min="1"
                                                class="w-full border-blueGray-700 bg-blueGray-700 appearance-none rounded-md px-3 py-2 border-2 text-gray-300 focus:outline-none sm:text-sm"
                                                required>
                                    </label>
                                    <label class="col-span-2">
                                        <div class="text-left text-gray-500">Email</div>
                                        <input
                                                placeholder="yourname@domain.com"
                                                autocomplete="off"
                                                id="email"
                                                name="email"
                                                type="email"
                                                class="w-full border-blueGray-700 bg-blueGray-700 appearance-none rounded-md px-3 py-2 border-2 text-gray-300 focus:outline-none sm:text-sm"
                                                required>
                                    </label>
                                    <div class="text-left text-gray-500 col-span-2">Payment Gateway</div>
                                    <div class="grid grid-cols-2 gap-2 col-span-2" id="payment_gateways"></div>
                                </div>
                                <div class="text-gray-400">Total: <span id="total">$ 0.0</span></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="px-4 py-3 sm:px-6 sm:flex">
                    <button type="submit" class="mr-1 group relative w-full flex justify-center py-2 px-4 rounded-md bg-blue-600 text-gray-300 shadow-md focus:outline-none">Buy Now</button>
                    <button @click="close()" type="button" class="ml-1 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-gray-200 text-gray-700 hover:bg-gray-50 focus:outline-none">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
